{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2021"]
  },
  "include": ["**/*", "src/**/*.d.ts", "src/flutterwave.d.ts" ],
  "exclude": ["node_modules"]
}
